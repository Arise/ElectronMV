{
  "name": "ElectronMV",
  "version": "1.1.2",
  "description": "Wraps MV with Electron",
  "main": "app/js/electronMain.js",
  "author": "Quxios",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-preset-electron": "^0.37.8",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-0": "^6.16.0",
    "babel-register": "^6.18.0",
    "electron-builder": "^7.18.0",
    "electron": "^1.4.5"
  },
  "scripts": {
    "start": "electron . --dev",
    "compile": "babel app -d compiled --copy-files",
    "build-w64": "npm run compile && build -w --x64",
    "build-w32": "npm run compile && build -w --ia32"
  },
  "directories": {
    "app": "compiled"
  },
  "build": {
    "appId": "MVGame",
    "files": [
      "**/*",
      "!**/save${/*}",
      "!**/node_modules${/*}"
    ],
    "extraResources": [
      {
        "from": "app/save",
        "to": "save",
        "filter": [
          "!**/*"
        ]
      }
    ],
    "win": {
      "target": "dir",
      "icon": "app/icon/icon.ico"
    }
  }
}
